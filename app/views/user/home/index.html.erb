<div>
  <h1>USER</h1>


  <% if current_user %>
    <div class="text-black text-xl font-bold p-8">

      <%= current_user.email %>
    </div>

    <%= button_to "Sign Out", destroy_user_session_path, method: :delete, class: 'border p-4 text-black ' %>

  <% else %>
    <div class="flex gap-4">
      <%= button_to "Sign In", new_user_session_path %>
      <%= button_to  "Sign Up", new_user_registration_path %>
    </div>
  <% end %>


</div>